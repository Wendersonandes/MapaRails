<h1>Editing accident</h1>

<% content_for(:inline_javascript) do %>
  <script type="text/javascript">
      var latitud= <%= @latitud %>;
      var longitud= <%= @longitud %>;
      var map = new GMaps({
        div: '#map',
        zoom: 16,
        lat: latitud,
        lng: longitud
      });
      map.addMarker({
        lat: <%= @latitud %>,
        lng: <%= @longitud %>,
        draggable: true,
        title: 'Titulo',
        dragend: function(e){
          //alert(e.latLng.lat().toFixed(3));
          //alert(e.latLng.lng().toFixed(3));
          $('#accident_latitud').val(e.latLng.lat());
          $('#accident_longitud').val(e.latLng.lng());
        },
        infoWindow: {
          content: '<p><small><%= @direccion %></small></p>'
        }
      });
  </script>
<% end %>

<div class="row">
  <div class="small-8 columns">
    <%= render 'form' %>    
  </div>
  <div class="small-4 columns">
    <div id='map' style="width: 100%; height: 250px"></div>
    
  </div>
</div>

