<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>Document</th>
      <th>Identificacion</th>
      <th>Nombre</th>
      <th>Nacionalidad</th>
      <th>Nacimiento</th>
      <th>Sexo</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Test</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.document_id %></td>
        <td><%= person.identificacion %></td>
        <td><%= person.nombre %></td>
        <td><%= person.nacionalidad %></td>
        <td><%= person.nacimiento %></td>
        <td><%= person.sexo %></td>
        <td><%= person.direccion %></td>
        <td><%= person.telefono %></td>
        <td><%= person.test_id %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

